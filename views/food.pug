doctype html
html
	head
		style
			include ../public/css/stylesheet.css
		script
			//- include ../public/js/main.js
		
		title Food
	body
		h1 Food Game
			img(class='food', src='../food.png')
			img(class='hide', src='../test.png')

			div(class='testTwo')
				form(class='animal' action='/food', method='post', autocomplete='off')
					fieldset
						legend Which five foods did you see? Fill in the blanks. 
						input(type='checkbox' name='answer' value='egg' id='checkbox') 
						label(for='egg') egg
						br
						input(type='checkbox', name='answer' value='burger' id='checkbox')
						label(for='burger') burger
						br
						input(type='checkbox' name='answer' value='pizza' id='checkbox')
						label(for='pizza') pizza
						br
						input(type='checkbox', name='answer' value='apple' id='checkbox')
						label(for='apple') apple
						br
						input(type='checkbox' name='answer' value='bread' id='checkbox')
						label(for='bread') bread
						br
						input(type='checkbox' name='answer' value='banana' id='checkbox')
						label(for='banana') banana
						br
						input(type='checkbox', name='answer' value='chocolate' id='checkbox')
						label(for='chocolate') chocolate
						br
						input(type='submit', value='Check your answers')
		a(href='/') Main page

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")